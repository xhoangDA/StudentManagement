@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if(Session["ID"]==null)
    {
        Response.Redirect("~/Account/Login");
    }

}

<h2>DANH SÁCH SINH VIÊN</h2>

@using (Html.BeginForm("Index", "Students", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
            {
            <div style="margin-top:-8px">
                <div class="form-group"><input class="form-control" type="text" name="strSearch" placeholder="Tìm kiếm sinh viên" value="@ViewBag.StrSearch"/></div>
                <div class="form-group"><button class="btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button></div>
            </div>
            }

<p style="margin-top:20px">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
